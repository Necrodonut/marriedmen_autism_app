<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.marriedmen.autismapp.DebugActivity">

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="495dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">


            <Button
                android:id="@+id/profileClear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clear all profiles"
                android:onClick="profileClearAll" />

            <Button
                android:id="@+id/activityClear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clear all activities"
                android:onClick="activityClearAll"/>

            <Button
                android:id="@+id/behvClear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clear all behvs"
                android:onClick="behvClearAll"/>

            <Button
                android:id="@+id/logClear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clear all logs"
                android:onClick="logClearAll"/>


        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
